<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-4.0.xsd">
<!--Autowired By type should hqave only one property of one type and only one ref of that type in xml-->
    <bean id="triangle" class="exercise.Triangle" autowire="byName">

    </bean>

    <bean id="point0" class="exercise.Point">
        <property name="x" value="0"></property>
        <property name="y" value="0"></property>
    </bean>

    <bean id="point1" class="exercise.Point">
        <property name="x" value="1"></property>
        <property name="y" value="1"></property>
    </bean>

    <bean id="point2" class="exercise.Point">
        <property name="x" value="2"></property>
        <property name="y" value="2"></property>
    </bean>

</beans>

